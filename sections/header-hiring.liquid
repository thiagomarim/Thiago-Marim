{%- liquid
  assign sec = section.settings-%}

<!-- Header Hiring Section Styles and Scripts -->
{{ 'header-hiring.css' | asset_url | stylesheet_tag }}
<script src="{{ 'header-hiring.js' | asset_url }}" defer></script>

<!-- Main Header Container -->
<header class="header_container" role="banner">

  <!-- Mobile Hamburger Menu Button -->
  <button
    class="hamburger_menu"
    id="hamburgerMenu"
    aria-label="Toggle mobile menu"
    aria-expanded="false"
    aria-controls="mobileMenu">
    <!-- Hamburger Icon (visible by default) -->
    <div class="hamburger_icon" aria-hidden="true">
      {{ 'hamburguer.svg' | inline_asset_content }}
    </div>
    <!-- Close Icon (hidden by default) -->
    <div class="close_icon" aria-hidden="true">
      {{ 'close.svg' | inline_asset_content }}
    </div>
  </button>

  <!-- Shop Logo/Image Section -->
  <div class="header_container_image">
    {% if sec.shop_image != blank %}
      <a href="{{ routes.root_url }}">
        <img
          src="{{ sec.shop_image | image_url }}"
          alt="{{ sec.shop_image.alt | default: 'Shop Logo' }}"
          width="auto"
          height="auto"
          loading="eager">
      </a>
    {% endif %}
  </div>

  <!-- Desktop Header Content -->
  <div class="header_container_content desktop_content">
    {% if sec.header_text != blank %}
      <h2>{{ sec.header_text }}</h2>
    {% endif %}
  </div>

  <!-- Desktop Call-to-Action Button -->
  <div class="header_container_button desktop_content">
    {% if sec.button_text != blank %}
    <a
      href="{{ sec.button_link }}"
      class="button"
      aria-label="{{ sec.button_text }}">
      <div class="button_content">
        <span>{{ sec.button_text }}</span>
        <span class="button_icon" aria-hidden="true">
          {{ 'arrow-right.svg' | inline_asset_content }}
        </span>
        </div>
      </a>
    {% endif %}
  </div>

  
</header>

<!-- Mobile Navigation Menu (placed outside header to appear below) -->
<nav
  class="mobile_menu"
  id="mobileMenu"
  role="navigation"
  aria-label="Mobile navigation">
  <div class="mobile_menu_content">
    <!-- Mobile Header Text -->
    {% if sec.mobile_header_text != blank %}
      <h1>{{ sec.mobile_header_text }}</h1>
    {% endif %}

    <!-- Mobile Call-to-Action Button -->
    {% if sec.button_text != blank %}
    <a
      href="{{ sec.button_link }}"
      class="button"
      aria-label="{{ sec.button_text }}">
      <div class="button_content">
        <span>{{ sec.button_text }}</span>
        <span class="button_icon" aria-hidden="true">
          {{ 'arrow-right.svg' | inline_asset_content }}
        </span>
        </div>
      </a>
    {% endif %}
  </div>
</nav>

{% schema %}
  {
    "name": "Header Hiring",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Header Content"
      },
      {
        "type": "image_picker",
        "id": "shop_image",
        "label": "Shop Image"
      },
      {
        "type": "text",
        "id": "header_text",
        "label": "Header Text",
        "default": "Find the ideal gift for your loved ones."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Chose Gift"
      }, {
        "type": "text",
        "id": "mobile_header_text",
        "label": "Mobile Header Text",
        "default": "Get started with your 'Mi Solo' kit"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Header Hiring"
      }
    ]
  }
{% endschema %}